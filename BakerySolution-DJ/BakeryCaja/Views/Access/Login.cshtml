@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es" class="dark">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login - Pan y Lujo</title>

    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">

    <script>
        tailwind.config = {
            darkMode: 'class',
            theme: {
                extend: {
                    colors: {
                        choco: { 900: '#1a0f0a', 800: '#2d1b14', 700: '#4a2c21', 600: '#5d3a2e' },
                        cream: { 100: '#fffbf0', 200: '#ffefd5', 300: '#ffe0b2' },
                        gold: '#ffc107', bread: '#d97706',
                    },
                    animation: {
                        'float': 'float 6s ease-in-out infinite',
                        'fade-in': 'fadeIn 0.8s ease-out',
                    },
                    keyframes: {
                        float: { '0%, 100%': { transform: 'translateY(0)' }, '50%': { transform: 'translateY(-10px)' } },
                        fadeIn: { '0%': { opacity: '0', transform: 'translateY(20px)' }, '100%': { opacity: '1', transform: 'translateY(0)' } }
                    }
                }
            }
        }
    </script>

    <style>
        body {
            transition: background-color 0.5s;
        }
    </style>
</head>

<body onclick="closeMenus(event)" class="bg-cream-100 dark:bg-choco-900 h-screen flex items-center justify-center font-sans selection:bg-gold selection:text-choco-900 relative overflow-hidden">

    <div class="absolute top-0 left-0 w-full h-full overflow-hidden pointer-events-none z-0">
        <div class="absolute top-[-10%] left-[-10%] w-96 h-96 bg-gold/20 rounded-full blur-3xl animate-float"></div>
        <div class="absolute bottom-[-10%] right-[-10%] w-96 h-96 bg-bread/20 rounded-full blur-3xl animate-float" style="animation-delay: 2s;"></div>
    </div>

    <div class="relative z-10 w-full max-w-sm mx-4 bg-white/80 dark:bg-choco-800/80 backdrop-blur-xl p-8 rounded-3xl shadow-2xl border border-cream-300 dark:border-choco-600 animate-fade-in">

        <div class="absolute top-4 right-4 flex gap-2 z-50">

            <div class="relative">
                <button id="btn-lang" onclick="toggleLangMenu(event)" class="w-8 h-8 rounded-full bg-cream-200 dark:bg-choco-700 flex items-center justify-center hover:scale-110 transition-transform text-sm font-bold text-choco-900 dark:text-gold shadow-sm">
                    <span id="lang-label">EN</span>
                </button>

                <div id="lang-menu" class="absolute right-0 top-full mt-2 w-32 bg-white dark:bg-choco-700 rounded-xl shadow-xl overflow-hidden hidden border border-cream-300 dark:border-choco-600 z-[100]">
                    <button onclick="setLang('en')" class="w-full text-left px-4 py-2 hover:bg-cream-100 dark:hover:bg-choco-600 text-xs font-bold flex items-center gap-2 border-b border-gray-100 dark:border-choco-600/50 text-choco-900 dark:text-cream-200 hover:text-bread dark:hover:text-gold transition-colors">🇺🇸 English</button>
                    <button onclick="setLang('es')" class="w-full text-left px-4 py-2 hover:bg-cream-100 dark:hover:bg-choco-600 text-xs font-bold flex items-center gap-2 border-b border-gray-100 dark:border-choco-600/50 text-choco-900 dark:text-cream-200 hover:text-bread dark:hover:text-gold transition-colors">🇪🇸 Español</button>
                    <button onclick="setLang('fr')" class="w-full text-left px-4 py-2 hover:bg-cream-100 dark:hover:bg-choco-600 text-xs font-bold flex items-center gap-2 text-choco-900 dark:text-cream-200 hover:text-bread dark:hover:text-gold transition-colors">🇫🇷 Français</button>
                </div>
            </div>

            <button onclick="toggleTheme()" class="w-8 h-8 rounded-full bg-cream-200 dark:bg-choco-700 flex items-center justify-center hover:scale-110 transition-transform text-lg shadow-sm">
                <span id="theme-icon">🍫</span>
            </button>
        </div>

        <div class="text-center mb-8">
            <div class="inline-flex items-center justify-center w-16 h-16 bg-gradient-to-br from-gold to-bread rounded-2xl shadow-lg mb-4 transform rotate-3">
                <i class="fas fa-bread-slice text-3xl text-white"></i>
            </div>
            <h1 class="text-3xl font-black text-bread dark:text-gold uppercase tracking-tight">Pan y Lujo</h1>
            <p class="text-sm text-gray-500 dark:text-gray-400 font-medium mt-1" data-i18n="subtitle">Acceso al Sistema POS</p>
        </div>

        @if (ViewBag.Error == "ERROR_LOGIN")
        {
            <div class="mb-5 bg-red-100 dark:bg-red-900/30 border border-red-200 dark:border-red-800 text-red-600 dark:text-red-300 px-4 py-3 rounded-xl text-sm text-center flex items-center justify-center gap-2 animate-bounce">
                <i class="fas fa-exclamation-circle"></i>
                <span data-i18n="errLogin">Usuario o contraseña incorrectos</span>
            </div>
        }
        else if (ViewBag.Error != null)
        {
            <div class="mb-5 bg-red-100 dark:bg-red-900/30 border border-red-200 dark:border-red-800 text-red-600 dark:text-red-300 px-4 py-3 rounded-xl text-sm text-center flex items-center justify-center gap-2 animate-bounce">
                <i class="fas fa-exclamation-circle"></i> @ViewBag.Error
            </div>
        }

        <form action="/Access/Login" method="post" class="space-y-5">
            <div class="group">
                <label class="block text-xs font-bold uppercase text-gray-400 mb-1 ml-1" data-i18n="lblUser">Usuario</label>
                <div class="relative">
                    <span class="absolute left-4 top-3.5 text-gray-400 group-focus-within:text-bread transition-colors"><i class="fas fa-user"></i></span>
                    <input type="text" name="username" required
                           class="w-full bg-gray-50 dark:bg-choco-900 border-2 border-transparent focus:border-gold rounded-xl py-3 pl-10 pr-4 outline-none transition-all dark:text-white placeholder-gray-400"
                           placeholder="cajero">
                </div>
            </div>

            <div class="group">
                <label class="block text-xs font-bold uppercase text-gray-400 mb-1 ml-1" data-i18n="lblPass">Contraseña</label>
                <div class="relative">
                    <span class="absolute left-4 top-3.5 text-gray-400 group-focus-within:text-bread transition-colors"><i class="fas fa-lock"></i></span>
                    <input type="password" name="password" required
                           class="w-full bg-gray-50 dark:bg-choco-900 border-2 border-transparent focus:border-gold rounded-xl py-3 pl-10 pr-4 outline-none transition-all dark:text-white placeholder-gray-400"
                           placeholder="••••••">
                </div>
            </div>

            <button type="submit"
                    class="w-full bg-gradient-to-r from-bread to-orange-600 hover:from-orange-600 hover:to-orange-700 text-white font-bold py-4 rounded-xl shadow-lg hover:shadow-orange-500/40 transform hover:-translate-y-1 transition-all duration-300">
                <span data-i18n="btnLogin">INICIAR TURNO</span> <i class="fas fa-arrow-right ml-2"></i>
            </button>
        </form>

    </div>

    <script>
        // TRADUCCIONES
        const i18n = {
            en: {
                subtitle: "POS System Access",
                lblUser: "USERNAME",
                lblPass: "PASSWORD",
                btnLogin: "START SHIFT",
                errLogin: "Invalid username or password"
            },
            es: {
                subtitle: "Acceso al Sistema POS",
                lblUser: "USUARIO",
                lblPass: "CONTRASEÑA",
                btnLogin: "INICIAR TURNO",
                errLogin: "Usuario o contraseña incorrectos"
            },
            fr: {
                subtitle: "Accès Système POS",
                lblUser: "UTILISATEUR",
                lblPass: "MOT DE PASSE",
                btnLogin: "COMMENCER",
                errLogin: "Nom d'utilisateur ou mot de passe incorrect"
            }
        };

        let lang = localStorage.getItem('bakeryLang') || 'en';

        // Inicializar
        document.addEventListener('DOMContentLoaded', () => {
            initTheme();
            setLang(lang);
        });

        // Lógica de Idioma
        function toggleLangMenu(event) {
            event.stopPropagation();
            document.getElementById('lang-menu').classList.toggle('hidden');
        }

        function closeMenus(event) {
            const menu = document.getElementById('lang-menu');
            const btn = document.getElementById('btn-lang');
            if (!menu.contains(event.target) && !btn.contains(event.target)) {
                menu.classList.add('hidden');
            }
        }

        function setLang(selectedLang) {
            lang = selectedLang;
            localStorage.setItem('bakeryLang', lang);
            document.getElementById('lang-label').innerText = lang.toUpperCase();

            document.querySelectorAll('[data-i18n]').forEach(el => {
                const key = el.getAttribute('data-i18n');
                if (i18n[lang][key]) el.innerText = i18n[lang][key];
            });
            document.getElementById('lang-menu').classList.add('hidden');
        }

        // Lógica de Tema
        function initTheme() {
            const html = document.documentElement;
            const icon = document.getElementById('theme-icon');
            if (localStorage.getItem('theme') === 'light') {
                html.classList.remove('dark');
                icon.innerText = '🍦';
            } else {
                html.classList.add('dark');
                icon.innerText = '🍫';
            }
        }

        function toggleTheme() {
            const html = document.documentElement;
            const icon = document.getElementById('theme-icon');
            if (html.classList.contains('dark')) {
                html.classList.remove('dark');
                localStorage.setItem('theme', 'light');
                icon.innerText = '🍦';
            } else {
                html.classList.add('dark');
                localStorage.setItem('theme', 'dark');
                icon.innerText = '🍫';
            }
        }
    </script>

</body>
</html>

